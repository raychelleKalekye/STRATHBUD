<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <style>
            .login_area{
                border:4px solid salmon;
                width:40%;
                height:auto;
                margin-top:80px;
                margin-left:340px;
                background-color:#c85410c9;
                margin-bottom:80px ;
            }
            .form1 div{
                margin-top:15px;
                margin-left:30px;
            }
            .form1 input{
                padding: 10px 30px 10px 10px;
            }
            .form1 button{
                padding:10px 10px 10px 10px;
                margin-top:45px;
                margin-left:15%;
                background-color: transparent;
                cursor:pointer;
                
            }
            .form1 button:hover{
                transition: 2s;
                z-index: 2;
                background-color: salmon;
                
            }
            .login_area p{
                margin-top:25px;
                margin-left:25%;
            }
            .login_area a{
                text-decoration:none;
                color:black;
            }
            .login_area a:hover{
                text-decoration: underline;
                color:white;
            }
         
        </style>
    </head>
    <body>
        <%- include ('reusables/header')%>
        <section class="main_area">
           
          <div class="login_area">
        
            <form class="form1"action="/Strathbud/Admin/Signup" method="POST">
                <div class="error-message">
                    <% if (typeof error !== 'undefined') { %>
                        <p><i class="fa fa-exclamation-triangle" aria-hidden="true"></i><%= error %></p>
                    <% } %>
                </div>
                <div>
                    <label for="AdmID">Admin ID:</label>
                    <br><br>
                    <input type="text" id="AdmID" name="AdmID" minlength="5" >
            
                </div>
             
                <div>
                    <label for="password">Password:</label>
                    <br><br>
                    <input type="password" id="password" name="password">
                   
                </div>
                <div>
                    <label for="confirm_Password">Confirm Password</label>
                    <input type="password" id="confirm_Password" name="confirm_Password">
                </div>
                <button>SIGN UP</button>
                
            </form>
            
          </div>

        </section>
        <%- include ('reusables/footer')%>
    </body>
</html>